{
    "name": "@candlelib/wick",
    "version": "0.15.8",
    "description": "HTML Component Compiler",
    "main": "./build/library/entry-point/wick-server.js",
    "types": "./build/types/entry-point/wick-server.d.ts",
    "type": "module",
    "bin": {
        "candle.wick": "./build/library/entry-point/wick-cli.js"
    },
    "scripts": {
        "prepublishOnly": "rm -rf ./build && tsc & sleep 10",
        "compile": "hydrocarbon compile --parser glalr -u -o ./source/typescript/parser/ -e ./source/typescript/parser/proxy_parser_environment.js -t module ./source/grammars/wick_parser.hcg",
        "compile.mount": "hydrocarbon compile --parser glalr -u -d -m -e ./build/library/parser/env.js -t module ./source/grammars/wick_parser.hcg",
        "compile.js": "hydrocarbon compile -u -o ./source/compiler/js -e ./source/compiler/env_proxy.mjs -t mjs ./source/compiler/grammars/js.hcg",
        "compile.html": "hydrocarbon compile -u -o ./source/compiler/html -e ./source/compiler/env_proxy.mjs -t mjs ./source/compiler/grammars/html.hcg",
        "compile.test": "node --experimental-modules ./test/config.mjs",
        "test": "candle.cure --reporter ci --headless ./test/*",
        "test.watch": "candle.cure -w ./test/*",
        "server": "lantern"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CandleLibrary/wick.git"
    },
    "keywords": [
        "SPA",
        "PWA",
        "Components",
        "JavaScript",
        "Forms",
        "Website",
        "REST",
        "APP"
    ],
    "files": [
        "/build",
        "/README.md",
        "/CHANGELOG.md",
        "/LICENSE"
    ],
    "directories": {
        "lib": "source",
        "test": "test"
    },
    "author": "Anthony Weathersby",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/CandleLibrary/wick/issues"
    },
    "homepage": "https://github.com/CandleLibrary/wick#readme",
    "devDependencies": {
        "@candlelib/cure": "0.5.0"
    },
    "jshintConfig": {
        "esversion": 6,
        "unused": true
    },
    "dependencies": {
        "@candlelib/conflagrate": "0.4.3",
        "@candlelib/css": "0.3.8",
        "@candlelib/glow": "0.4.7",
        "@candlelib/hydrocarbon": "0.11.7",
        "@candlelib/js": "0.5.8",
        "@candlelib/spark": "0.3.3",
        "@candlelib/uri": "0.2.4",
        "@candlelib/wind": "0.5.3",
        "@candlelib/html": "0.2.4",
        "@candlelib/paraffin": "0.1.8"
    },
    "esm": {
        "cjs": {
            "cache": true
        }
    },
    "eslintConfig": {
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 2018
        },
        "env": {
            "es6": true,
            "browser": true,
            "node": true
        },
        "extends": "eslint:recommended",
        "rules": {
            "no-fallthrough": [
                "error",
                {
                    "commentPattern": "[iI]ntentional( - [\\w\\W]*){0,1}"
                }
            ],
            "semi-style": [
                "error",
                "last"
            ],
            "semi": [
                "warn",
                "always",
                {
                    "omitLastInOneLineBlock": true
                }
            ],
            "prefer-const": "warn",
            "new-cap": [
                "error"
            ],
            "padding-line-between-statements": [
                "error",
                {
                    "blankLine": "always",
                    "prev": "function",
                    "next": "*"
                }
            ]
        }
    },
    "engine": {
        "node": ">=13.6.0"
    }
}