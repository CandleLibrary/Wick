{
    "name": "@candlelib/wick",
    "version": "0.15.16",
    "description": "Web Component Compiler",
    "main": "./build/library/entry-point/wick-server.js",
    "types": "./build/types/entry-point/wick-server",
    "type": "module",
    "bin": {
        "candle.wick": "./index.js"
    },
    "scripts": {
        "prepublishOnly": "rm -rf ./build && tsc & sleep 10",
        "compile": "./scripts/compile.sh",
        "test": "candle.cure --reporter ci --headless ./test/*",
        "test.watch": "candle.cure -w ./test/*",
        "server": "lantern",
        "buildsite": "npm install && candle.wick compile --output ./www ./site"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CandleLibrary/wick.git"
    },
    "keywords": [
        "Template Component Compiler",
        "Web Component Parser",
        "Component",
        "Web app",
        "PWA",
        "Components",
        "JavaScript",
        "Forms",
        "Website",
        "REST",
        "APP"
    ],
    "files": [
        "/build",
        "/README.md",
        "/CHANGELOG.md",
        "/LICENSE",
        "/index.js"
    ],
    "directories": {
        "lib": "source",
        "test": "test"
    },
    "author": "Anthony Weathersby",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/CandleLibrary/wick/issues"
    },
    "homepage": "https://github.com/CandleLibrary/wick#readme",
    "devDependencies": {
        "@candlelib/cure": "*",
        "@candlelib/wick": "*",
        "@types/node": "^13.9.1"
    },
    "jshintConfig": {
        "esversion": 6,
        "unused": true
    },
    "dependencies": {
        "@candlelib/conflagrate": "0.4.9",
        "@candlelib/css": "0.3.15",
        "@candlelib/glow": "0.4.14",
        "@candlelib/html": "0.2.5",
        "@candlelib/hydrocarbon": "0.14.4",
        "@candlelib/js": "0.5.15",
        "@candlelib/log": "0.1.2",
        "@candlelib/paraffin": "0.1.15",
        "@candlelib/spark": "0.3.4",
        "@candlelib/uri": "0.3.0",
        "@candlelib/wind": "0.5.4"
    }
}